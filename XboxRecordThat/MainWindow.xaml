<Window x:Class="XboxRecordThat.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:XboxRecordThat"
        mc:Ignorable="d"
        Title="Xbox, record that!" Height="163" Width="290" Loaded="MainWindow_Load">
    <Grid Margin="0,0,0,0">
        <Button x:Name="button1" Content="Enable" Margin="16,32,94,32" Click="button_Enable_Click" Height="20" Width="50"/>
        <Button x:Name="button2" Content="Disable" Margin="94,0,16,0" Click="button_Disable_Click" Height="20" Width="50"/>
        <Label x:Name="label" Content="Xbox, record that!" Margin="0,20,0,0" Width="104" HorizontalAlignment="Center" Height="23" VerticalAlignment="Top" />
        <Ellipse x:Name="activeIndicator" Height="14" Margin="73,35,71,35" Stroke="Black" Fill="Red" Width="16"/>
    </Grid>
</Window>
